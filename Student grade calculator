//gradecalculator
import java.util.*;
class studentgradecalculator
{
    public static void main(String args[])
    {
        int sum=0;
        int average;
        int grade;
        String gra="";
        Scanner sc=new Scanner(System.in);
        System.out.println("Welcome to the Grade Calculation System");
        System.out.println("Enter the number of subjects in curriculum");
        int n=sc.nextInt();
        System.out.println("Enter the marks obtained in each of the subjects out of 100");
        for(int i=0;i<=n;i++)
        {
            sum+=int(sc.nextInt());
        }
        average=int(sum/n);
        grade=average/10;
        {
        if(average>=1 && average<4)
        {
        System.out.println("C grade");
        gra='C';
        }
        else if(average>4 && average<8)
        {
        System.out.println("B grade");
        gra='B';
        }
        else if(average>7 && average<=9)
        {
        System.out.println("A grade");
        gra='A';
        }
        else
        System.out.println("Invalid Inputs");
        }
         System.out.println("The total marks are"+sum);
         System.out.println("The total average percentage is"+average);
         System.out.println("The grades obtained is"+gra);

 
    }
}
